<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/vision_image"
            android:layout_width="match_parent"
            android:layout_height="192dp"
            android:layout_marginTop="32dp"
            android:scaleType="fitXY"
            android:src="@drawable/vision1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/visiontxt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Our Mission"
                android:textSize="21sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/visiontxt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/vision1"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/visiontxt3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Our Objectives include:"
                android:textSize="21sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/visiontxt4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:text="@string/vision2"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/visiontxt5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Vision"
                android:textSize="21sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/visiontxt6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/vision3"
                android:textSize="16sp" />

        </LinearLayout>
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>