<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="@color/cardview_shadow_start_color"
    tools:context="in.askdial.mrr.CartActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img"
            android:layout_width="wrap_content"
            android:layout_height="189dp"
            android:src="@drawable/mrr_building" />

        <TextView
            android:id="@+id/tv_roomName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_weight="0.06"
            android:gravity="center"
            android:hint="Room Name"
            android:textColor="@color/light_blue"
            android:textColorHint="@color/light_blue"
            android:textSize="30dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tv_roomprice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.06"
            android:gravity="center"
            android:hint="Room Price"
            android:textColor="@color/background"
            android:textColorHint="@color/background"
            android:textSize="23dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.07"
            android:background="@drawable/buttonpressed"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_no"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:layout_weight="0.06"
                android:gravity="center"
                android:hint="No. Of Rooms"
                android:textColor="@color/green400"
                android:textColorHint="@color/gold"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_noOfroom"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="50dp"
                android:layout_weight="0.06"
                android:gravity="center"
                android:hint="Count"
                android:textColor="@color/green400"
                android:textColorHint="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.04"
            android:background="@drawable/buttonpressed"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_priBk"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:layout_weight="0.06"
                android:gravity="center"
                android:hint="Pre Booking Charges "
                android:textColor="@color/green400"
                android:textColorHint="@color/gold"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_PriBoking"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="50dp"
                android:layout_weight="0.06"
                android:gravity="center"
                android:hint="1000 Rs"
                android:textColor="@color/green400"
                android:textColorHint="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/buttonpressed"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_total"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:layout_weight="0.06"
                android:gravity="center"
                android:hint="Sub Total"
                android:textColor="@color/green400"
                android:textColorHint="@color/gold"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_total_amount"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="50dp"
                android:layout_weight="0.06"
                android:gravity="center"
                android:hint="500 Rs"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.04"
            android:background="@drawable/buttonpressed"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_bkdate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:layout_weight="0.06"
                android:gravity="center"
                android:hint="Booking Date"
                android:textColor="@color/green400"
                android:textColorHint="@color/gold"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_bkDate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="50dp"
                android:layout_weight="0.06"
                android:gravity="center"
                android:hint="Date"
                android:textColor="@color/green400"
                android:textColorHint="@color/white"
                android:textSize="18dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="12dp"
            android:layout_weight="0.04"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_weight="0.06"
                android:gravity="center"
                android:text="Cancel"
                android:textColor="@color/colorAccent"
                android:textColorHint="@color/colorAccent"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_confirm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_weight="0.06"
                android:gravity="center"
                android:text="Confirm"
                android:textColor="@color/green400"
                android:textColorHint="@color/colorAccent"
                android:textSize="20dp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
